<h1>Listing mirrors</h1>

<table>
  <tr>
    <th>Uri</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mirrors.each do |mirror| %>
  <tr>
    <td><%= mirror.uri %></td>
    <td><%= mirror.slug %></td>
    <td><%= link_to 'Show', mirror %></td>
    <td><%= link_to 'Edit', edit_mirror_path(mirror) %></td>
    <td><%= link_to 'Destroy', mirror, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

